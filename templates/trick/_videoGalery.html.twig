<div class="row .d-xs.none .d-sm-none .d-md-block mb-5 mt-2 justify-content-center" >
    {% for media in medias %}
    {% if media.type == 'video' %}
        <div class="col-12 col-lg-6 mb-4" style="min-height:250px;">
            <iframe width="100%"  height="100%" src="{{ media.path }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="shadow"></iframe>
        </div>
    {% endif %}

{% endfor %}