<div class="row .d-xs.none .d-sm-none .d-md-block mt-2 justify-content-center" >
    <div class="col-12 col-lg-8 p-0" style="min-height:350px;">
        <iframe id='player' width="100%"  height="100%" src="about:blank" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="shadow"></iframe>
    </div>
</div>
<div class="row .d-xs.none .d-sm-none .d-md-block mb-5 mt-3 justify-content-center " >
    <div class="col-12 col-lg-8 mb-4">
        <div class="row justify-content-center">
            {% set i = 0 %}
            {% for media in medias %}
                {% if media.type == 'video' %}
                    {% set i = i+1 %}
                    <div class="col-2"><a href="#view" class="btn btn-outline-info" onclick="setPath('{{ media.path }}')">video {{ i }}</a></div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

</div>
