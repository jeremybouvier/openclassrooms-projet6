{%  extends 'base.html.twig' %}

{% block title %}
   Figure {{ trick.name }}
{% endblock %}

{% block header %}
    <div class="container-fluid header p-0">
        {% for media in medias %}
            {% if media.header == 1 %}<img src="{{ media.path }}" alt="Media de la figure{{ trick.name }}" class="img-fluid"/>{% endif %}
        {% endfor %}
        <h1 id="title" class="col-12 text-center">{{ trick.name }}</h1>
    </div>
{% endblock %}

{% block body%}
    <div class="container-fluid bg-light" id="section">
        <div class="row">
            <div class="col-2 offset-5 d-flex justify-content-center mb-3" style="border: 1px solid cornflowerblue; border-radius: 5px;">
                <div>
                    <a href="#"><i class="icon fa fa-pencil " ></i></a>
                    <form method="post"  style="display:inline-block" onsubmit="return confirm('Etes vous sure de vouloir supprimer?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                        <button type="submit" class="icon fa fa-trash-o " style="background: none;border:none; cursor: pointer"></button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row .d-xs.none .d-sm-none .d-md-block mb-5 mt-2" >
            {% for media in medias %}
                <div class="col-2">
                    <img src="{{ media.path}}" alt="Media de la figure {{ trick.name }}" class="img-fluid mb-2" style="border: 1px solid grey; box-shadow: 2px 2px 6px grey"/>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12 col-lg-10 offset-lg-1">
                <p>{{ trick.description |nl2br}}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-lg-8 offset-lg-3 ">
                <div class="row ">
                    <div class="col-3 text-center mr-2 ml-2" style="border-radius: 5px;border: 1px solid cornflowerblue">Group : {{ group.name }}</div>
                    <div class="col-3 text-center mr-2 ml-2" style="border-radius: 5px;border: 1px solid cornflowerblue">Crée le : {{ trick.creationDate.date |date("d/m/y") }}</div>
                    <div class="col-3 text-center mr-2 ml-2" style="border-radius: 5px;border: 1px solid cornflowerblue">Modifié le : {{ trick.updateDate.date |date("d/m/y") }}</div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12 col-lg-8 offset-lg-2" style="background-color: grey;height:50px;">
                formulaire discution

            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12 col-lg-8 offset-lg-2 mb-5" style="background-color: grey;height: 200px;">
                discutions

            </div>
        </div>
    </div>
{% endblock %}