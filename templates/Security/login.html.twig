{%  extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block header %}
    <div class="container-fluid header mb-3 p-0">
        <img src="{{ asset('/assets/image/multipleTrick.jpg') }}" alt="image header" class="img-fluid"/>
    </div>
{% endblock %}

{% block body%}
    <div class="container mb-5 mt-5 d-flex justify-content-center" id="section" >
        <div class="col-12 col-lg-10">
            <div class="row justify-content-center mb-5">
                <h1 class="text-center">Connexion Espace Membre</h1>
            </div>
            <div class="row justify-content-between">
                <div class="col-12 col-lg-6 pt-3 mb-4" style="border: 1px darkgrey solid;box-shadow: 4px 4px 8px grey;">
                    <h5 class="text-center">Connexion membre</h5>
                    <div class="row justify-content-center mb-2">
                        {% if error %}
                            <div class="col-12 col-lg-6 alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security')}}</div>
                        {% endif %}
                    </div>
                    <div class="row justify-content-center">
                        <form action="{{ path('login')}}" method="post" class="col-10">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="_username" class="form-control" value="{{ lastUsername }}">
                            </div>
                            <div class="form-group">
                                <label for="password">
                                    <div class="col-12 p-0"> Mot De Passe </div>
                                    <div class="col-12 p-0">
                                        <a href="{{ path('user.forgot') }}" class="text-muted font-italic" style="font-size: 0.9em;">(mot de passe oublié?)</a>
                                    </div>
                                </label>
                                <input type="password" id="password" name="_password" class="form-control">
                            </div>
                            <div class="col-12 d-flex mb-5 justify-content-center">
                                <a href="{{ path('trick.index') }}" class="col-6 col-lg-4 btn btn-sm btn-outline-info">Retour</a>
                                <button type="submit" class="btn btn-sm btn-outline-info col-6 col-lg-4 ml-4">Valider</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-12 col-lg-5  pt-3 mb-4" style="border: 1px darkgrey solid;box-shadow: 4px 4px 8px grey;">
                    <h5 class="text-center ">Nouveau membre</h5>
                    <div class="row justify-content-center">
                        <a href="{{ path('user.new') }}" class="col-6 col-lg-6 mt-5 mb-5 btn btn-sm btn-outline-secondary"> Créer un compte</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}


